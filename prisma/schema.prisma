// Prisma 스키마 - reCree MVP
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Enums ────────────────────────────────────────────────────────────────────

enum UserRole {
  USER
  EDITOR
  ADMIN
}

enum PostStatus {
  IMPORTED    // 시트에서 가져온 직후
  AI_DRAFTED  // Gemini 초안 생성 완료
  DRAFT       // 관리자 편집 중
  PUBLISHED   // 사용자에게 노출
}

enum PlaceSource {
  ADMIN
  USER
}

enum PlaceStatus {
  OPEN
  CLOSED_TEMP
  CLOSED_PERMANENT
}

enum ReCreeshotStatus {
  ACTIVE
  REPORTED
  HIDDEN
  DELETED
}


enum SaveTarget {
  POST
  RECREESHOT
}

enum SectionType {
  MANUAL
  AUTO_NEW
  AUTO_HOT
}

// ─── Models ───────────────────────────────────────────────────────────────────

model User {
  id              String   @id @db.Uuid
  email           String   @unique
  nickname        String?
  bio             String?
  profileImageUrl String?
  role            UserRole @default(USER)
  language        String   @default("en")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  posts       Post[]
  reCreeshots ReCreeshot[]
  saves       Save[]
}

model Topic {
  id        String    @id @default(uuid()) @db.Uuid
  nameKo    String
  nameEn    String
  slug      String    @unique
  level     Int       @default(0)
  parentId  String?   @db.Uuid
  colorHex     String?
  colorHex2    String?   // 그라데이션 끝 색 (null = 단색)
  gradientDir  String    @default("to bottom")  // 그라데이션 방향
  gradientStop Int       @default(150)           // 그라데이션 종료 위치 (%)
  textColorHex String?
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  parent   Topic?  @relation("TopicHierarchy", fields: [parentId], references: [id])
  children Topic[] @relation("TopicHierarchy")

  postTopics        PostTopic[]
  reCreeshotTopics  ReCreeshotTopic[]
  curatedSections   CuratedSection[]  @relation("FilterTopic")
}

model Tag {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  nameKo    String
  slug      String   @unique
  group     String
  colorHex     String?   // null = 그룹 색 상속
  colorHex2    String?   // 그라데이션 끝 색 (null = 단색)
  textColorHex String?   // null = 그룹 색 상속
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  postTags        PostTag[]
  reCreeshotTags  ReCreeshotTag[]
  curatedSections CuratedSection[] @relation("FilterTag")
}

model TagGroupConfig {
  group        String   @id
  nameEn       String   @default("")
  colorHex     String   @default("#C6FD09")
  colorHex2    String?
  gradientDir  String   @default("to bottom")
  gradientStop Int      @default(150)
  textColorHex String   @default("#000000")
  sortOrder    Int      @default(0)
  updatedAt    DateTime @updatedAt
}

model Post {
  id             String     @id @default(uuid()) @db.Uuid
  titleKo        String
  titleEn        String
  slug           String     @unique
  subtitleKo     String?
  subtitleEn     String?
  bodyKo         String?
  bodyEn         String?
  thumbnailUrl   String?
  images         String[]
  status         PostStatus @default(DRAFT)
  source         String?
  importNote     String?   // 시트 원본 데이터 (JSON 문자열)
  sourceUrl      String?   // 출처 URL (레거시, PostSource 테이블로 이전)
  sourceType     String?   // INSTAGRAM|YOUTUBE|TIKTOK|X|REDDIT|BLOG|NEWS|OTHER (레거시)
  sourceNote     String?   // 출처 메모 (레거시)
  memo           String?   // 관리자 내부 메모
  collectedBy    String?   // 수집자 이름
  collectedAt    String?   // 수집 날짜 (예: "2024-01-15")
  viewCount      Int        @default(0)
  saveCount      Int        @default(0)
  authorId       String?    @db.Uuid
  translatedAt   DateTime?
  publishedAt    DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  author      User?        @relation(fields: [authorId], references: [id])
  postTopics  PostTopic[]
  postTags    PostTag[]
  postPlaces  PostPlace[]
  postSources PostSource[]
  homeBanners HomeBanner[]
}

model PostSource {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  postId         String   @db.Uuid
  sourceType     String?  // INSTAGRAM|YOUTUBE|TIKTOK|X|REDDIT|BLOG|NEWS|OTHER
  sourceUrl      String?
  sourceNote     String?
  sourcePostDate String?  // 출처 게시 날짜 (예: "2024-01-15")
  referenceUrl   String?
  sortOrder      Int      @default(0)
  createdAt      DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Place {
  id             String      @id @default(uuid()) @db.Uuid
  nameKo         String
  nameEn         String?
  addressKo      String?
  addressEn      String?
  latitude       Float?
  longitude      Float?
  googlePlaceId  String?     @unique
  googleMapsUrl  String?
  naverPlaceId   String?
  naverMapsUrl   String?
  kakaoMapsUrl   String?
  phone          String?
  operatingHours Json?
  rating         Float?    // Google Maps 평점
  imageUrl       String?
  source         PlaceSource @default(ADMIN)
  isVerified     Boolean     @default(false)
  status         PlaceStatus @default(OPEN)
  country        String      @default("KR")
  city           String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  postPlaces   PostPlace[]
  reCreeshots  ReCreeshot[]
}

model ReCreeshot {
  id               String           @id @default(uuid()) @db.Uuid
  userId           String           @db.Uuid
  placeId          String?          @db.Uuid
  linkedPostId     String?          @db.Uuid
  imageUrl         String
  referencePhotoUrl String?
  story            String?
  tips             String?
  locationName     String?
  locationLat      Float?
  locationLng      Float?
  matchScore       Float?
  showBadge        Boolean          @default(false)
  status           ReCreeshotStatus @default(ACTIVE)
  saveCount        Int              @default(0)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  user            User              @relation(fields: [userId], references: [id])
  place           Place?            @relation(fields: [placeId], references: [id])
  reCreeshotTopics ReCreeshotTopic[]
  reCreeshotTags   ReCreeshotTag[]
}

// ─── M:N 조인 테이블 ──────────────────────────────────────────────────────────

model PostTopic {
  postId       String   @db.Uuid
  topicId      String   @db.Uuid
  isVisible    Boolean  @default(false)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())

  post  Post  @relation(fields: [postId], references: [id], onDelete: Cascade)
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@id([postId, topicId])
}

model PostTag {
  postId       String   @db.Uuid
  tagId        String   @db.Uuid
  isVisible    Boolean  @default(false)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

model PostPlace {
  postId      String   @db.Uuid
  placeId     String   @db.Uuid
  context     String?
  vibe        String[]
  mustTry     String?
  tip         String?
  insightEn   Json?
  createdAt   DateTime @default(now())

  post  Post  @relation(fields: [postId], references: [id], onDelete: Cascade)
  place Place @relation(fields: [placeId], references: [id], onDelete: Cascade)

  @@id([postId, placeId])
}

model ReCreeshotTopic {
  reCreeshotId String   @db.Uuid
  topicId      String   @db.Uuid
  createdAt    DateTime @default(now())

  reCreeshot ReCreeshot @relation(fields: [reCreeshotId], references: [id], onDelete: Cascade)
  topic      Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@id([reCreeshotId, topicId])
}

model ReCreeshotTag {
  reCreeshotId String   @db.Uuid
  tagId        String   @db.Uuid
  createdAt    DateTime @default(now())

  reCreeshot ReCreeshot @relation(fields: [reCreeshotId], references: [id], onDelete: Cascade)
  tag        Tag        @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([reCreeshotId, tagId])
}

// ─── 기타 모델 ────────────────────────────────────────────────────────────────

model Save {
  id         String     @id @default(uuid()) @db.Uuid
  userId     String     @db.Uuid
  targetType SaveTarget
  targetId   String     @db.Uuid
  createdAt  DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetType, targetId])
}

model HomeBanner {
  id       String  @id @default(uuid()) @db.Uuid
  postId   String  @db.Uuid
  order    Int     @default(0)
  isActive Boolean @default(true)

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model CuratedSection {
  id            String      @id @default(uuid()) @db.Uuid
  titleEn       String
  titleKo       String
  type          SectionType @default(MANUAL)
  postIds       String[]    @db.Uuid
  filterTopicId String?     @db.Uuid
  filterTagId   String?     @db.Uuid
  maxCount      Int         @default(10)
  order         Int         @default(0)
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  filterTopic Topic? @relation("FilterTopic", fields: [filterTopicId], references: [id])
  filterTag   Tag?   @relation("FilterTag", fields: [filterTagId], references: [id])
}

model PopularSearch {
  id        String   @id @default(uuid()) @db.Uuid
  keyword   String   @unique
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
